<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/app_click_color"
        android:orientation="vertical"

        android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

        <com.feiling.dasong.widget.StatusTagTextView
                android:id="@+id/item_task_status_tag"
                style="@style/StatusTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_status_start"
                android:textColor="#fff"
                android:textSize="10sp"
                app:backgroundColor="@color/task_status_pending" />

        <androidx.appcompat.widget.AppCompatTextView
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:id="@+id/item_task_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="数控精车及平衡试验"
                android:textSize="14sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/item_task_move_top_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/activity_vertical_margin"
                android:text="置顶"
                android:textColor="@color/radiusImageView_border_color"
                android:visibility="visible" />

    </LinearLayout>

    <com.feiling.dasong.widget.DivView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">


        <com.feiling.dasong.widget.LabelTextView
                android:id="@+id/item_task_client_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:label="客户简称"
                app:labelWidth="100sp"
                app:text="阿斯顿发送到发送到发送大法师打发撒旦法阿斯顿发送到发" />

        <com.feiling.dasong.widget.LabelTextView
                android:id="@+id/item_task_contract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:label="钢印号(合同号)"
                app:labelWidth="100sp"
                app:text="阿斯顿发送到发送到发送大法师打发撒旦法阿斯顿发送到发" />

        <com.feiling.dasong.widget.LabelTextView
                android:id="@+id/item_task_product_no_ltv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:label="生产订单号"
                app:labelWidth="100sp"
                app:text="阿斯顿发送到发送到发送大法师打发撒旦法阿斯顿发送到发" />


        <com.feiling.dasong.widget.LabelTextView
                android:id="@+id/item_task_date_ltv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:label="日期"
                app:labelWidth="100sp"
                app:text="" />

    </LinearLayout>

</LinearLayout>