<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/ripple_bg"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
            android:id="@+id/item_inventory_select_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/margin_normal"
            android:contentDescription="选中状态"
            android:src="@drawable/s_select" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

        <com.feiling.dasong.widget.LabelTextView
                android:id="@+id/item_inventory_name_ltv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="名称:"
                app:labelSize="12sp"
                app:text="哈哈" />

        <com.feiling.dasong.widget.LabelTextView
                android:id="@+id/item_inventory_code_ltv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                app:label="编码:"
                app:labelSize="12sp"
                app:text="哈哈哈" />

        <com.feiling.dasong.widget.LabelTextView
                android:id="@+id/item_inventory_std_ltv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                app:label="规格:"
                app:labelSize="12sp"
                app:text="ajajajaj" />
    </LinearLayout>

</LinearLayout>