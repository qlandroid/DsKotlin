<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/ripple_color">    <!--波纹颜色-->
    <!-- 未点击背景图-->
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="@color/app_color_red" />

        </shape>
    </item>
    <!-- 点击背景图-->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="@color/app_color_red_pressed" />
        </shape>
    </item>

</selector>