<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/app_color_red_riple">    <!--波纹颜色-->
    <item>
        <selector>


            <!-- 点击背景图-->
            <item
                    android:state_enabled="false">
                <shape>
                    <solid android:color="@color/app_color_red_disabled"/>

                    <corners android:radius="8dp" />
                </shape>
            </item>

            <!-- 未点击背景图-->
            <item
                    android:state_pressed="false">
                <shape>
                    <solid android:color="@color/app_color_red"/>
                    <corners android:radius="8dp" />
                </shape>
            </item>



            <!-- 点击背景图-->
            <item
                    android:state_pressed="true">
                <shape>
                    <solid android:color="@color/app_color_red_pressed"/>

                    <corners android:radius="8dp" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>