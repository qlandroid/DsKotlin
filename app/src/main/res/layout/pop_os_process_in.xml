<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.layout.QMUIFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="500dp">


    <LinearLayout
            android:id="@+id/popOsProcessContentView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/popBtnGroup"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/qmui_config_color_white"
            android:orientation="vertical">

        <TextView
                android:id="@+id/popOsProcessTitleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/qmui_config_color_white"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/margin_normal"
                android:paddingBottom="@dimen/margin_normal"
                android:text="收货信息"
                android:textSize="12sp" />

        <com.feiling.dasong.widget.DivView
                android:layout_width="match_parent"
                android:layout_height="1dp" />

        <com.feiling.dasong.widget.ReboundScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp">

            <com.feiling.dasong.widget.NavDetailsView
                    android:id="@+id/popOsProcessInNdv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </com.feiling.dasong.widget.ReboundScrollView>

        <com.feiling.dasong.widget.DivView
                android:layout_width="match_parent"
                android:layout_height="1dp" />

        <LinearLayout
                android:id="@+id/popBtnGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/popOsProcessInBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/s_radius_btn_green"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="收货"
                    android:textColor="@color/qmui_config_color_white" />

            <TextView
                    android:id="@+id/popOsProcessCancelBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:background="@drawable/s_radius_btn_cancel"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/qmui_config_color_white" />
        </LinearLayout>
    </LinearLayout>


</com.qmuiteam.qmui.layout.QMUIFrameLayout>